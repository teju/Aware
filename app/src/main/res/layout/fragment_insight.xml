<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swiperefresh_items"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.watch.aware.app.fragments.GoalProgressFragment">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="15dp"
                android:layout_height="1dp">

            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                </View>

                <TextView
                    android:layout_width="100dp"
                    android:text="Week"
                    android:id="@+id/week"
                    android:padding="15dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>
                <View
                    android:layout_width="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                </View>

                <TextView
                    android:layout_width="100dp"
                    android:text="Month"
                    android:id="@+id/month"
                    android:padding="15dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>
                <View
                    android:layout_width="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                </View>

                <TextView
                    android:layout_width="100dp"
                    android:text="Year"
                    android:id="@+id/year"
                    android:padding="15dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_med"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>
                <View
                    android:layout_width="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                </View>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="1dp">

            </View>
        </LinearLayout>


        <com.anychart.AnyChartView
            android:layout_width="match_parent"
            android:id="@+id/insightChart"
            android:layout_marginTop="10dp"
            android:layout_height="400dp">

        </com.anychart.AnyChartView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Calories"
                android:id="@+id/calories"
                android:buttonTint="@color/orange"
                android:textColor="@color/orange"
                android:layout_height="wrap_content">

            </CheckBox>
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Steps"
                android:id="@+id/steps"
                android:buttonTint="@color/Blue"

                android:textColor="@color/Blue"
                android:layout_height="wrap_content">

            </CheckBox>

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Distance"
                android:id="@+id/distnce"
                android:buttonTint="@color/green"

                android:textColor="@color/green"
                android:layout_height="wrap_content">

            </CheckBox>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Least active Day"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_med"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/red"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/last_active_day"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_med"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/white"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>