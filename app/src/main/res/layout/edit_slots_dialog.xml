<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/black"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                android:fontFamily="@font/opensanssemibold"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Select your Time"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_small"
                android:textColor="@color/white"
                android:fontFamily="@font/opensanssemibold"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Done"
                android:id="@+id/done"
                android:textSize="@dimen/text_small"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:fontFamily="@font/opensanssemibold"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/llStartTime"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="Start Time"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingTop="15dp"
                        android:id="@+id/tv_start_time"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="@color/DarkGray"
                    android:layout_height="match_parent"></View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/llEndTime"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="End Time"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingTop="15dp"
                        android:id="@+id/tv_end_time"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensansregular"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

            </LinearLayout>
            <TimePicker
                android:layout_width="match_parent"
                android:visibility="visible"
                android:theme="@style/timePickerOrange"
                android:layout_weight="1"
                android:numbersInnerTextColor="@color/black"
                android:numbersTextColor="@color/black"
                android:id="@+id/to_time"
                android:timePickerMode="spinner"
                android:layout_height="wrap_content">
            </TimePicker>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="30dp"
        android:background="@drawable/check_circle"
       android:layout_gravity="bottom|right"
        android:id="@+id/tick"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp">

    </Button>
</FrameLayout>