<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.CreateNewPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/arrow_left"
            android:id="@+id/back"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Create new password"
            android:layout_marginLeft="25dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/opensansextrabold"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Your new password must be different from previous used passwords."
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_med"
            android:textColor="@color/DarkGray"
            android:fontFamily="@font/opensansregular"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:padding="15dp"
            android:hint="Password"
            android:backgroundTint="@color/soft_transparent_grey"
            android:inputType="textPassword"
            android:textSize="@dimen/text_med"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensansregular"
            android:imeOptions="actionNext"
            android:id="@+id/password"
            android:background="@drawable/theme_rounded_rectangle"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:textColor="@color/red"
            android:id="@+id/error_passowrd"
            android:layout_marginLeft="10dp"
            android:text="Must be least 8 characters."
            android:visibility="gone"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:padding="15dp"
            android:backgroundTint="@color/soft_transparent_grey"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:fontFamily="@font/opensansregular"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_med"
            android:imeOptions="actionNext"
            android:id="@+id/confirm_password"
            android:background="@drawable/theme_rounded_rectangle"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:textColor="@color/red"
            android:id="@+id/error_confirm_passowrd"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:text="Both passwords must match."
            android:textSize="@dimen/text_small"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

        </TextView>
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/theme_rounded_rectangle"
            android:id="@+id/reset_password"
            android:text="Reset Password"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:fontFamily="@font/opensansbold"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp">
        </Button>
    </LinearLayout>
</FrameLayout>