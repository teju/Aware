<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/mainLayoutFragment"
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent"
         />
    <np.com.susanthapa.curved_bottom_navigation.CurvedBottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cbn_selectedColor="@color/colorPrimary"
        app:cbn_bg="@color/Black"
        app:cbn_unSelectedColor="@color/DarkGray"
        app:cbn_fabBg="@color/transparent">

    </np.com.susanthapa.curved_bottom_navigation.CurvedBottomNavigationView>
</FrameLayout>