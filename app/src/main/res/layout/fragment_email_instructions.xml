<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.EmailInstructionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/email_instructions"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Check your mail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/opensansextrabold"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="We have sent a password recover instructions\nto your email."
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_med"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/DarkGray"
            android:fontFamily="@font/opensansregular"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/theme_rounded_rectangle"
            android:backgroundTint="@color/colorAccent"
            android:text="Open email app"
            android:id="@+id/open_mail"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_height="40dp">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:text="Skip, Iâ€™ll confirm later"
            android:layout_marginTop="20dp"
            android:id="@+id/skip"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_med"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/DarkGray"
            android:fontFamily="@font/opensansregular"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:id="@+id/tvretry"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/text_small"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:textColor="@color/DarkGray"
        android:fontFamily="@font/opensansregular"
        android:layout_height="wrap_content">
    </TextView>


</FrameLayout>